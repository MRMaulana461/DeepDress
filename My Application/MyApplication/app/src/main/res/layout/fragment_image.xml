<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".ImageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Button Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Select Image Button -->
            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="PILIH GAMBAR"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50" />

            <!-- Take Photo Button -->
            <Button
                android:id="@+id/takePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AMBIL FOTO"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800" />

        </LinearLayout>

        <!-- Predict Button and Progress -->
        <LinearLayout
            android:id="@+id/predictContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Predict Button -->
            <Button
                android:id="@+id/predictButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="PREDIKSI FASHION"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E90FF"
                android:enabled="false" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:indeterminateTint="#1E90FF"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Result Label -->
        <TextView
            android:id="@+id/resultLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Prediksi Fashion:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/predictContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Result Box -->
        <TextView
            android:id="@+id/resultBox"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="16dp"
            android:text="Pilih atau ambil foto fashion untuk melihat prediksi gender, penggunaan, dan jenis artikel"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="top|start"
            app:layout_constraintTop_toBottomOf="@id/resultLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            android:text="Petunjuk:\n• Pilih foto fashion dari galeri atau ambil foto baru\n• Pastikan gambar jelas dan fokus pada pakaian\n• Tekan tombol PREDIKSI FASHION untuk analisis"
            android:textColor="#888888"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintTop_toBottomOf="@id/resultBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>